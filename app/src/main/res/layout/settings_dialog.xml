<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/const_language" />

    <Spinner
        android:id="@+id/const_langauge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"/>

    <CheckBox
        android:id="@+id/keepScreenOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/keep_screen_on" />

    <CheckBox
        android:id="@+id/onlyVisiblePlanets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onlyVisiblePlanets" />

    <CheckBox
        android:id="@+id/adjustTimeVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/adjustTimeVolume" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textScalingFactor"/>
        <EditText
            android:id="@+id/fontScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            tools:ignore="Autofill"
            android:hint="@string/textScalingHint"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewDirection" />
    <EditText
        android:id="@+id/viewDirection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        tools:ignore="Autofill"
        android:hint="0"/>

</LinearLayout>
